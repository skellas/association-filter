<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>


<!--
    Database scripts and patches
-->

<beans>

    <!-- Database scripts to run on creation of database -->
    <bean id="schema.create.association-filter" class="org.alfresco.repo.domain.schema.SchemaBootstrapRegistration" init-method="register">
        <property name="schemaBootstrap" ref="schemaBootstrap"/>
        <property name="postCreateScriptUrls">
            <list>
                <value>classpath:alfresco/module/${project.artifactId}/dbscripts/create/${db.script.dialect}/AssociationCreate-CoreViews.sql</value>
            </list>
        </property>
    </bean>

